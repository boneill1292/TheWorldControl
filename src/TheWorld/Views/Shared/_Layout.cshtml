<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag</title>
    <meta charset="utf-8" />

    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div id="sidebar">

        <img src="~/img/faces.jpg" alt="faces pic" class="headshot" />
        <span id="username"> Ben ONeill</span>

        <ul class="menu">
            <li class="active"> <a asp-controller="App" asp-action="Index"> Home </a> </li>
            <li> <a asp-controller="App" asp-action="About"> About </a> </li>
            <li> <a asp-controller="App" asp-action="Contact"> Contact </a> </li>
        </ul>
    </div>


    <div id="wrapper">
        <div id="main">
            <div>
                <button id="sidebarToggle"> Toggle Menu</button>
            </div>
            @RenderBody()
        </div>

        <div id="footer">
            &copy; 2015 BenButt Dev
        </div>
    </div>

    <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>

    @RenderSection("scripts",false)

    <script type="text/javascript" src="~/scripts/site.js">  </script>



</body>
</html>